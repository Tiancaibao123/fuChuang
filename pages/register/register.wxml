<!--pages/register/register.wxml-->

<van-cell-group>
<!-- 手机号 -->
  <van-field
    model:value="{{ phoneNum }}"
    required
    clearable
    label="手机号"
    placeholder="请输入手机号"
    error-message="{{phoErrorMsg}}"
  />
<!-- 密码 -->
  <van-field
    model:value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ false }}"
    error-message="{{pswErrorMsg}}"
  />
  <view class="psw-tip">密码格式为数字和26个英文字母组成</view>
  <!-- 短信验证 -->
  <van-cell-group>
  <van-field
    value="{{ sms }}"
    center
    clearable
    label="短信验证码"
    placeholder="请输入短信验证码"
    border="{{ false }}"
    use-button-slot
  >
    <van-button slot="button" size="small" type="primary">
      发送验证码
    </van-button>
  </van-field>
</van-cell-group>

</van-cell-group>

<view class="reg-button">
  <van-button type="primary" bindtap="onRegister">注册</van-button>
</view>